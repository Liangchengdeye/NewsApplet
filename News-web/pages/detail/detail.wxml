<!--pages/detail/detail.wxml-->
<import src="/wxParse/wxParse.wxml"/>
<view class="box">
  <scroll-view class="Sr" scroll-y style="height:{{height}}px">
    <!-- 流出边距 -->
    <view class="box-content">
      <!-- 标题开始 -->
      <view class="title">{{newArticle.title}}</view>
      <!-- 标题结束 -->
      <!--作者开始  -->
      <view class="author">
        <view class="left">
          <image class="Img" mode="widthFix" src="../../images/test.jpg"></image>
          <view class="author-detail">
            <view class="detail-top">
              <view class="h1">{{newArticle.source}}</view>
              <view class="hop">头条号</view>
            </view>
            <view class="detail-bottom">
              <view class="day">{{newArticle.createTime}}</view>
              <view class="day" style="padding-left:10px">\t浏览量：{{newArticle.visitCount}}</view>
            </view>
          </view>
        </view>
        <view class="right">
          <view class="add">A+</view>
          <view class="cup">A-</view>
        </view>
      </view>
      <!--作者结束  -->
      <view class="content-body">
        <image class="body-img" src="{{newArticle.indexImgPath}}"></image>
        <template is="wxParse" data="{{wxParseData:body.nodes}}"/>
      </view>
    </view>
  </scroll-view>
</view>