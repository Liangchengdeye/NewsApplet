/* pages/home/home.wxss */

.container {
  width: 100%;
}

.clearfix {
  clear: both;
}

/*导航栏开始  */

.nav {
  width: 100%;
  border-bottom: 2rpx solid #ddd;
}

.nav .search {
  position: relative;
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  float: left;
}
.searchFor {
  position: absolute;  
  left:100%;
  /* width:464rpx; */
  width:0;
  height:100%;
  background:#fff;
}

.search>image {
  width: 38rpx;
  height: 38rpx;
}

.menu {
  float: left;
  width: 465rpx;
  height: 90rpx;
  border-right: 2rpx solid #ddd;
  white-space: nowrap;
}

.menu-nav {
  width: 100%;
  height: 100%;
}

.menu-nav .item {
  position: relative;
  display: inline-block;
  font-size: 30rpx;
  line-height: 90rpx;
  padding: 0 20rpx;
}

.menu-nav .item.active::before {
  position: absolute;
  bottom: 0;
  left: 0;
  content: "";
  display: block;
  width: 100%;
  height: 6rpx;
  background: #c44943;
}

.add {
  width: 194rpx;
  height: 90rpx;
  float: right;
}

.add .addImg, .addHome {
  width: 97rpx;
  height: 100%;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add .addImg>image {
  width: 38rpx;
  height: 38rpx;
}

.add .addHome>image {
  width: 38rpx;
  height: 38rpx;
}

/*导航栏结束  */

/*内容开始  */

.content {
  width: 100%;
  background: #fff;
}

.content-new {
  display: flex;
  width: 100%;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e0e0e0;
}

.new-left {
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 2;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.new-left .title {
  padding-top: 5rpx;
  font-size: 36rpx;
  padding-bottom: 10rpx;
}

.new-left .refer {
  font-size: 24rpx;
  color:  #3a3434;
}

.new-right {
  flex: 1;
}

.new-right .new-right-Img {
  width: 100%;
  height: 79px;
  vertical-align: middle;
}
/* loading */
.lazy {
  width:100%;
  height:160rpx;
}
/* loading end */

/*内容结束  */
